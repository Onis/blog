%h1 Список записей:

%table{border: '1'}
	%tr
		%th Заголовок
		%th Содержание
		%th Действия
	- @posts.each do |post|
		%tr
			%td 
				= post.title
			%td 	
				= post.text
			%td
				= link_to 'Показать', post 
				|
				= link_to 'Изменить', edit_post_path(post)
				|
				= link_to 'Удалить', post_path(post), method: :delete, data: { confirm: 'Вы уверены?' }

= link_to "Новая запись", new_post_path